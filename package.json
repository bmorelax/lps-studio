{
  "name": "lps-studio",
  "version": "1.0.10",
  "description": "Visual storytelling tool using Logic Production Systems (LPS), powered by lps.js",
  "homepage": "https://github.com/mauris/lps-studio",
  "author": {
    "name": "Sam Yong",
    "email": "samyonggit@gmail.com",
    "url": "http://mauris.sg/"
  },
  "main": "main.js",
  "private": true,
  "license": "BSD-3-Clause",
  "scripts": {
    "postinstall": "npm run postinstall:electron && electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "build": "node scripts/build-license.js && npm run postinstall:electron && npm run electron:tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && electron-builder build --linux",
    "electron:windows": "npm run build:prod && electron-builder build --windows",
    "electron:mac": "npm run build:prod && electron-builder build --mac",
    "electron:all": "npm run build:prod && electron-builder build --linux && electron-builder build --mac && electron-builder build --windows",
    "test": "npm run postinstall:web && ng test",
    "e2e": "npm run postinstall:web && ng e2e",
    "postversion": "git push && git push --tags",
    "release:patch": "npm version patch && npm run electron:all",
    "release:minor": "npm version minor && npm run electron:all",
    "release:major": "npm version major && npm run electron:all"
  },
  "dependencies": {
    "@ng-bootstrap/ng-bootstrap": "^3.2.2",
    "ansi-to-html": "^0.6.6",
    "bootstrap": "^4.1.3",
    "es6-promise": "^4.2.5",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "lps": "^1.0.18",
    "popper.js": "^1.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.8.3",
    "@angular/cli": "^6.2.3",
    "@angular/common": "^6.1.8",
    "@angular/compiler": "^6.1.8",
    "@angular/compiler-cli": "^6.1.8",
    "@angular/core": "^6.1.8",
    "@angular/forms": "^6.1.8",
    "@angular/http": "^6.1.8",
    "@angular/language-service": "^6.1.8",
    "@angular/platform-browser": "^6.1.8",
    "@angular/platform-browser-dynamic": "^6.1.8",
    "@angular/router": "^6.1.8",
    "@ngx-translate/core": "10.0.2",
    "@ngx-translate/http-loader": "3.0.1",
    "@types/jasmine": "2.8.8",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "^10.10.3",
    "codelyzer": "4.4.4",
    "core-js": "2.5.7",
    "electron": "^3.0.0",
    "electron-builder": "20.28.4",
    "electron-reload": "1.2.5",
    "jasmine-core": "3.2.1",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.4",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.3.1",
    "legal-eagle": "^0.16.0",
    "npm-run-all": "4.1.3",
    "protractor": "^5.4.1",
    "rxjs": "^6.3.2",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "^3.0.3",
    "wait-on": "3.0.1",
    "webdriver-manager": "12.1.0",
    "zone.js": "0.8.26"
  }
}
