lpsShowObject(Id) from T1 to T2 <-
  lpsUpdateObject(Id, [
    isHidden(0)
  ]) from T1 to T2.

lpsHideObject(Id) from T1 to T2 <-
  lpsUpdateObject(Id, [
    isHidden(1)
  ]) from T1 to T2.

lpsAnimateMoveObject(Id, Duration, X, Y) from T1 to T2 <-
  lpsAnimateObject(Id, Duration, [
    position(X, Y)
  ]) from T1 to T2.
